---
import ProjectsLayout from "@/layouts/ProjectsLayout.astro";
import ChevronLeft from "~/icons/chevron-left";
import { getCollection, render } from "astro:content";
import Github from "~/icons/github";
import ExternalLink from "~/icons/external-link";

export async function getStaticPaths() {
    const projects = await getCollection('projects')

    return projects.map((project) => ({
        params: { id: project.id.split('/')[1] },
        props: { project }
    }))
}

const { project } = Astro.props
const { image, title, description, tags, repositories, status, gallery, tech, date, category, demo, website } = project.data
const { Content } = await render(project)
---

<ProjectsLayout>
    <div class="w-full">
        <header class="bg-surface-main border-b border-divider flex items-center px-10 h-16 w-full fixed top-0 left-0 right-0 z-50">
            <a href="/docs/projects" class="cursor-pointer pl-1 pr-2 py-1 rounded-md flex items-center justify-center gap-x-1 text-sm hover:bg-surface-elevated/50 transition-colors">
                <ChevronLeft size={22} />
                <span>Back</span>
            </a>
        </header>

        <div class="mt-20 pt-8 pb-16">
            <div class="max-w-6xl mx-auto px-6 mb-12">
                <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
                    <div class="lg:col-span-2 space-y-8">
                        <div class="space-y-4">
                            <div class="flex items-center gap-3">
                                {status && (
                                    <span class="px-3 py-1 rounded-full text-xs font-medium bg-surface-elevated text-typography-main">
                                        {status}
                                    </span>
                                )}
                                {category && (
                                    <span class="px-3 py-1 rounded-full text-xs font-medium bg-surface-elevated/50 text-typography-secondary">
                                        {category}
                                    </span>
                                )}
                            </div>
                            <h1 class="text-4xl font-bold text-typography-main">{title}</h1>
                            <p class="text-lg text-typography-secondary">{description}</p>
                            {date && (
                                <p class="text-sm text-typography-tertiary">
                                    {new Date(date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
                                </p>
                            )}
                        </div>

                        {tech && tech.length > 0 && (
                            <div class="space-y-3">
                                <h3 class="text-sm font-semibold text-typography-main uppercase tracking-wide">Tech Stack</h3>
                                <div class="flex flex-wrap gap-2">
                                    {tech.map((t: string) => (
                                        <span class="px-3 py-1.5 rounded-md text-sm font-medium bg-surface-card text-typography-main border border-divider/50">
                                            {t}
                                        </span>
                                    ))}
                                </div>
                            </div>
                        )}

                        {/* Links Section */}
                        <div class="space-y-3">
                            <h3 class="text-sm font-semibold text-typography-main uppercase tracking-wide">Links</h3>
                            <div class="flex flex-wrap gap-3">
                                {
                                    repositories.map(({name, url}) => (
                                         <a href={url} target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-2 px-4 py-2 rounded-lg bg-surface-elevated hover:bg-surface-elevated/80 text-typography-main transition-colors">
                                            <Github size={18} />
                                            <span>{name}</span>
                                        </a>
                                    ))
                                }
                                {demo && (
                                    <a href={demo} target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-2 px-4 py-2 rounded-lg bg-surface-elevated hover:bg-surface-elevated/80 text-typography-main transition-colors">
                                        <ExternalLink size={18} />
                                        <span>Live Demo</span>
                                    </a>
                                )}
                                {website && (
                                    <a href={website} target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-2 px-4 py-2 rounded-lg bg-surface-elevated hover:bg-surface-elevated/80 text-typography-main transition-colors border border-divider">
                                        <ExternalLink size={18} />
                                        <span>Website</span>
                                    </a>
                                )}
                            </div>
                        </div>

                        {/* Tags */}
                        {tags && tags.length > 0 && (
                            <div class="space-y-3">
                                <h3 class="text-sm font-semibold text-typography-main uppercase tracking-wide">Tags</h3>
                                <div class="flex flex-wrap gap-2">
                                    {tags.map((tag: string) => (
                                        <span class="px-2.5 py-1 rounded-md text-xs font-medium bg-surface-elevated/50 text-typography-secondary border border-divider/50">
                                            {tag}
                                        </span>
                                    ))}
                                </div>
                            </div>
                        )}
                    </div>

                    <div class="lg:col-span-1">
                        {image && (
                            <div class="sticky top-24 rounded-lg overflow-hidden border border-divider bg-surface-elevated">
                                <img src={image || "/placeholder.svg"} alt={title} class="w-full aspect-[4/3] object-cover" />
                            </div>
                        )}
                    </div>
                </div>
            </div>

            {gallery && gallery.length > 0 && (
                <div class="max-w-6xl mx-auto px-6 mb-12">
                    <h2 class="text-2xl font-bold text-typography-main mb-6">Gallery</h2>
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                        {gallery.map((img: string) => (
                            <div class="rounded-lg overflow-hidden border border-divider bg-surface-elevated">
                                <img src={img || "/placeholder.svg"} alt="Project gallery" class="w-full aspect-video object-cover hover:scale-105 transition-transform duration-300" />
                            </div>
                        ))}
                    </div>
                </div>
            )}

            <div class="max-w-6xl mx-auto px-6">
                <div class="prose dark:prose-invert max-w-none">
                    <Content />
                </div>
            </div>
        </div>
    </div>
</ProjectsLayout>
